<%= form_with model: calendar, url: calendar_import_path(calendar), method: :patch, class: "settings-card", data: { controller: "import" } do |f| %>
  <div class="settings-card-header">
    <h2 class="settings-card-title">Calendar Import</h2>
    <p class="settings-card-description">Import events from Google Calendar, Apple Calendar, or any iCal feed.</p>
  </div>

  <div class="settings-card-body">
    <div class="settings-form-group">
      <label class="settings-label">Import Source</label>
      <div class="import-sources">
        <label class="import-source <%= 'selected' if calendar.import_source == 'google' %>" data-action="click->import#selectSource">
          <input type="radio" name="calendar[import_source]" value="google" <%= 'checked' if calendar.import_source == 'google' %> style="display: none;">
          <div class="import-source-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
              <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
              <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
              <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
            </svg>
          </div>
          <span class="import-source-name">Google Calendar</span>
        </label>

        <label class="import-source <%= 'selected' if calendar.import_source == 'apple' %>" data-action="click->import#selectSource">
          <input type="radio" name="calendar[import_source]" value="apple" <%= 'checked' if calendar.import_source == 'apple' %> style="display: none;">
          <div class="import-source-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
            </svg>
          </div>
          <span class="import-source-name">Apple Calendar</span>
        </label>

        <label class="import-source <%= 'selected' if calendar.import_source == 'other' || calendar.import_source.blank? %>" data-action="click->import#selectSource">
          <input type="radio" name="calendar[import_source]" value="other" <%= 'checked' if calendar.import_source == 'other' || calendar.import_source.blank? %> style="display: none;">
          <div class="import-source-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
              <line x1="16" y1="2" x2="16" y2="6"/>
              <line x1="8" y1="2" x2="8" y2="6"/>
              <line x1="3" y1="10" x2="21" y2="10"/>
            </svg>
          </div>
          <span class="import-source-name">Other iCal</span>
        </label>
      </div>
    </div>

    <div class="settings-form-group">
      <%= f.label :import_url, class: "settings-label" do %>
        iCal Feed URL
        <span class="settings-label-hint">Public or shared calendar URL</span>
      <% end %>
      <%= f.url_field :import_url,
          class: "settings-input",
          placeholder: "https://calendar.google.com/calendar/ical/...",
          data: { import_target: "url", action: "input->import#detectSource" } %>
      <p style="color: var(--text-light); font-size: 0.8125rem; margin: 8px 0 0;">
        <strong>Google:</strong> Calendar Settings → Integrate calendar → Public URL to this calendar<br>
        <strong>Apple:</strong> Calendar app → Share Calendar → Copy Link
      </p>
    </div>

    <div class="settings-form-group">
      <%= f.label :import_interval_hours, "Sync Interval", class: "settings-label" %>
      <%= f.select :import_interval_hours,
          [["Every hour", 1], ["Every 6 hours", 6], ["Every 12 hours", 12], ["Daily", 24]],
          {},
          class: "settings-input settings-select" %>
    </div>

    <div class="settings-toggle-row">
      <div class="settings-toggle-info">
        <h4>Enable Automatic Import</h4>
        <p>Sync events from the iCal feed on the schedule above</p>
      </div>
      <label class="settings-toggle">
        <%= f.check_box :import_enabled %>
        <span class="settings-toggle-slider"></span>
      </label>
    </div>

    <% if calendar.last_imported_at.present? %>
      <div class="settings-status <%= 'error' if calendar.import_error.present? %>">
        <span class="settings-status-dot"></span>
        <% if calendar.import_error.present? %>
          <span>Last sync failed: <%= calendar.import_error.truncate(80) %></span>
        <% else %>
          <span>
            Last synced <%= time_ago_in_words(calendar.last_imported_at) %> ago
            (<%= calendar.events.where(source_name: calendar.import_source || 'ical').count %> events imported)
          </span>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="settings-actions">
    <% if calendar.import_url.present? %>
      <%= button_to "Sync Now",
          sync_calendar_import_path(calendar),
          method: :post,
          class: "settings-btn settings-btn-secondary",
          data: { turbo: false } %>
    <% end %>
    <%= f.submit "Save Import Settings", class: "settings-btn settings-btn-primary" %>
  </div>
<% end %>
