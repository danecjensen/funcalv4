<%= form_with model: [post, comment], class: "mt-3" do |f| %>
  <div class="d-flex">
    <%= render "shared/avatar", user: current_user, size: 32 %>
    <div class="flex-grow-1 ms-2">
      <%= f.rich_text_area :body, class: "form-control form-control-sm", placeholder: "Write a comment..." %>
    </div>
    <%= f.submit "Comment", class: "btn btn-primary btn-sm ms-2" %>
  </div>
<% end %>
