<%# locals: (user:, size: 40) %>
<% if user.avatar.attached? %>
  <%= image_tag user.avatar, class: "rounded-circle", style: "width: #{size}px; height: #{size}px; object-fit: cover;" %>
<% else %>
  <% gravatar_hash = Digest::MD5.hexdigest(user.email.downcase) %>
  <%= image_tag "https://www.gravatar.com/avatar/#{gravatar_hash}?s=#{size}&d=identicon", class: "rounded-circle", style: "width: #{size}px; height: #{size}px;" %>
<% end %>
