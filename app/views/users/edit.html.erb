<div class="row">
  <div class="col-lg-6 mx-auto">
    <h2 class="mb-4">Edit Profile</h2>

    <%= form_with model: @user do |f| %>
      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4 text-center">
        <%= render "shared/avatar", user: @user, size: 100 %>
        <div class="mt-2">
          <%= f.label :avatar, "Change Avatar", class: "form-label" %>
          <%= f.file_field :avatar, class: "form-control", accept: "image/*" %>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-6">
          <%= f.label :first_name, class: "form-label" %>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
        <div class="col-md-6">
          <%= f.label :last_name, class: "form-label" %>
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :bio, class: "form-label" %>
        <%= f.text_area :bio, class: "form-control", rows: 3, placeholder: "Tell us about yourself..." %>
      </div>

      <div class="d-flex justify-content-between">
        <%= link_to "Cancel", user_path(@user), class: "btn btn-outline-secondary" %>
        <%= f.submit "Save Changes", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
