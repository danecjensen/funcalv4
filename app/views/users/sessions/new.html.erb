<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <div class="auth-logo-mark">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
          <line x1="16" y1="2" x2="16" y2="6"></line>
          <line x1="8" y1="2" x2="8" y2="6"></line>
          <line x1="3" y1="10" x2="21" y2="10"></line>
          <circle cx="12" cy="16" r="1.5"></circle>
        </svg>
      </div>
      <h2>Welcome back</h2>
      <p>Sign in to your FunCal account</p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="auth-field">
        <%= f.label :email, class: "auth-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-input", placeholder: "you@example.com" %>
      </div>

      <div class="auth-field">
        <%= f.label :password, class: "auth-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "auth-input", placeholder: "Your password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="auth-remember">
          <%= f.check_box :remember_me, class: "auth-checkbox" %>
          <%= f.label :remember_me, class: "auth-checkbox-label" %>
        </div>
      <% end %>

      <div class="auth-submit">
        <%= f.submit "Sign in", class: "auth-btn-primary" %>
      </div>
    <% end %>

    <div class="auth-footer">
      <div class="auth-footer-links">
        <%- if devise_mapping.registerable? %>
          <span class="auth-footer-text">New to FunCal?</span>
          <%= link_to "Create an account", new_registration_path(resource_name), class: "auth-link" %>
        <% end %>

        <%- if devise_mapping.recoverable? %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "auth-link auth-link-subtle" %>
        <% end %>
      </div>

      <%- if devise_mapping.omniauthable? %>
        <div class="auth-divider">
          <span>or</span>
        </div>
        <div class="auth-oauth-buttons">
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= button_to omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "auth-oauth-btn" do %>
              <% if provider.to_s.downcase.include?("google") %>
                <svg width="18" height="18" viewBox="0 0 24 24">
                  <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 01-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1z" fill="#4285F4"/>
                  <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                  <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                  <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                </svg>
              <% end %>
              Continue with <%= provider.to_s.gsub(/_?oauth2?\z/i, '').capitalize %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
